<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/editSecondsOnLap"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/editTest"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editSecondsOnLap" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:text="Button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTest" />

    <Button
        android:id="@+id/add30Second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/editSecondsOnLap"
        app:layout_constraintStart_toEndOf="@+id/editSecondsOnLap"
        app:layout_constraintTop_toTopOf="@+id/editSecondsOnLap" />
</androidx.constraintlayout.widget.ConstraintLayout>